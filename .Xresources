! ================================= [ Perl ] ==================================

URxvt.perl-lib: /home/slowpoke/.urxvt
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select,matcher
URxvt.perl-ext: fonts,urxvi,cwd-spawn

! ================================= [ Fonts ] =================================

urxvt.fonts.0: *-terminus-medium-*-*-*-*-120-*-*-*-*-*-*
urxvt.fonts.1: *-terminus-medium-*-*-*-*-140-*-*-*-*-*-*
urxvt.fonts.2: *-terminus-medium-*-*-*-*-160-*-*-*-*-*-*
urxvt.fonts.3: *-terminus-medium-*-*-*-*-180-*-*-*-*-*-*
urxvt.fonts.4: *-terminus-medium-*-*-*-*-200-*-*-*-*-*-*
urxvt.fonts.5: *-terminus-medium-*-*-*-*-220-*-*-*-*-*-*
urxvt.fonts.6: *-terminus-medium-*-*-*-*-240-*-*-*-*-*-*
urxvt.fonts.7: *-terminus-medium-*-*-*-*-260-*-*-*-*-*-*
