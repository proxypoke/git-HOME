! ============================== [ Look & Feel ] ==============================

URxvt.foreground:      lightblue
URxvt.transparent:     true
URxvt.shading:         15
URxvt.fading:          40

URxvt.urgentOnBell:    true
URxvt.cursorUnderline: false
URxvt.cursorColor:     #34E2E2
URxvt.underlineColor:  #34E2E2

! =============================== [ Scrolling ] ===============================

URxvt.scrollBar:         off
URxvt.saveLines:         8192
URxvt.scrollTtyOutput:   false
URxvt.scrollWithBuffer:  true
URxvt.scrollTtyKeypress: true

! ======================== [ Extension configuration ] ========================

! Font switching
URxvt.keysym.C-equal: perl:fonts:plus
URxvt.keysym.C-minus: perl:fonts:minus

! urxvi
URxvt.keysym.F1:    perl:urxvi

! URL selector
URxvt.url-select.launcher:  /usr/bin/firefox-aurora
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
!URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! clickable URLs
URxvt.url-launcher:     /usr/bin/firefox-aurora
URxvt.matcher.button:   1

! cwd-spawn
!URxvt.keysym.C-o: perl:cwd-spawn
