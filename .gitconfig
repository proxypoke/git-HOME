[user]
	name = slowpoke
	email = mail+git@slowpoke.io

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[core]
	editor = vim
	pager = less -FRSX
	#whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
	unstage = reset HEAD
	s = status --short --branch
	l = log --graph --oneline
	ll = log --graph --stat
	co = checkout
	ci = commit
	a = add
	p = push -u origin master
