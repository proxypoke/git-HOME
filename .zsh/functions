function zle-keymap-select {
    VIMODE="${${KEYMAP/vicmd/ COMMAND}/(main|viins)/}"
    zle reset-prompt
}
zle -N zle-keymap-select

chpwd_functions=(${chpwd_functions} cwd_to_urxvt)
